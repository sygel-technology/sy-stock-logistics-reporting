<odoo>

    <record id="view_picking_form_unvalued_copy" model="ir.ui.view">
        <field name="name">stock.picking.form.unvalued.copy</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='other_infos']" position="inside">
                <field name="valued" invisible="1"/>
                <field name="unvalued_copy" attrs="{'invisible':[('valued','=',False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
